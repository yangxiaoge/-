<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_margin="10dp"
        android:background="#fff"
        android:elevation="10dp"
        android:layout_height="wrap_content">
        <Spinner
            android:id="@+id/kc_frag_spinner"
            android:layout_width="match_parent"
            android:layout_weight="1"
            android:layout_height="wrap_content" />
        <EditText
            android:layout_width="match_parent"
            android:layout_weight="1"
            android:id="@+id/kc_frag_edit_text"
            android:hint="command e"
            android:inputType="textVisiblePassword"
            android:layout_height="wrap_content" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_height="wrap_content">
        <Switch
            android:layout_width="wrap_content"
            android:layout_marginLeft="8dp"
            android:id="@+id/kc_frag_switcher"
            android:layout_height="wrap_content" />
        <TextView
            android:layout_width="wrap_content"
            android:text="@string/str_clear_after_sent"
            android:layout_marginLeft="15dp"
            android:layout_height="wrap_content" />
    </LinearLayout>
    <ImageButton
        android:layout_width="wrap_content"
        android:background="@null"
        android:layout_gravity="center"
        android:id="@+id/kc_frag_press_bt"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/circle_primary_dark" />
</LinearLayout>